<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ayuda_item_layout"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ayuda_list_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="Ayuda"
        android:tint="@color/colorActivityIcon"
        android:src="@drawable/ic_help_outline_black_24dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ayuda_item_lines_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ayuda_list_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ayuda_title"
            style="@style/textListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="First Line" />
        <TextView
            android:id="@+id/ayuda_description"
            style="@style/textListSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Second Line" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>