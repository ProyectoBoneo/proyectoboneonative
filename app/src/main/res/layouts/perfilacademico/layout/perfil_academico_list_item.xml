<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comunicados_item_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/perfil_academico_list_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Message"
        android:tint="@color/colorActivityIcon"
        android:src="@drawable/ic_timeline_black_24dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perfil_academico_materia"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/perfil_academico_list_image"
        android:singleLine="true"
        tools:text="Materia" />

    <TextView
        android:id="@+id/perfil_academico_materia_promedio"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        tools:text="10" />
</android.support.constraint.ConstraintLayout>
